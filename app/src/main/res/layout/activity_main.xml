<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/mean_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите μ"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/variance_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите σ²"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/get_random_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сгенерировать число"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/random_number_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Результат будет здесь"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>


